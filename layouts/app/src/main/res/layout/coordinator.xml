<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/topPadding"
        android:paddingBottom="@dimen/bottomPadding"
        android:paddingLeft="@dimen/leftPadding"
        android:paddingRight="@dimen/rightPadding"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:id="@+id/tvTitulo"
            android:textSize="@dimen/textViews"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitulo"
            android:text="@string/button1"
            android:theme="@style/ButtonRaised"
            android:id="@+id/button1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="92dp"
            android:layout_height="75dp"
            android:layout_below="@id/button1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_call_to_action_24"
            android:backgroundTint="@color/primaryColor"
            android:onClick="mensaje"
            />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>